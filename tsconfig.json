{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "strict": true,
      "jsx": "react-jsx",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
  "types": ["jest","@testing-library/jest-dom"],
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/**.*"
  ]
  }